<div id="sidebar-wrapper" class="bg-dark">
  <div class="d-grid gap-3" style="width:100%">
    <ul class="list-unstyled">
      <li>
        <a class="btn" href="/files"><i class="fas fa-folder"></i> All files</a>
      </li>
      <li>
        <a class="btn" href="/user/recent"><i class="fas fa-history"></i> Recent</a>
      </li>
      <li>
        <a class="btn" href="/user/favourites"><i class="fas fa-star"></i> Favourites</a>
      </li>
      <li>
        <a class="btn" href="/user/shared"><i class="fas fa-share-alt"></i> Shared</a>
      </li>
    </ul>
    <div class="p-2 bottom" style="position:fixed; bottom:0; height:11%;">
      <label><%= formatBytes(size) %> of 5GB used</label>
      <div class="progress" style="width:140%;">
        <div class="progress-bar<%if (size  >= 4 * 1024 * 1024 * 1024) {%> bg-danger <%} else if (size  >= 2.5 * 1024 * 1024 * 1024) {%> bg-warning <%} else {%> bg-success <%}%>" role="progressbar" style="width: <%= (size / (5 * 1024 * 1024 * 1024))*100 %>%" aria-valuenow="<%= size%>" aria-valuemin="0" aria-valuemax="<%= 5 * 1024 * 1024 * 1024%>"></div>
      </div>
      <a href="/user/trash" style="position:fixed; bottom:0; height:4%;"><i class="fas fa-trash"></i> Deleted files</a>
    </div>
  </div>
</div>
<style>
  ul.list-unstyled > li > a {
    padding-top: 30px;
    font-size: 20px;
    width: 100%;
    text-align: left;
  }
  ul.list-unstyled > li > a:hover {
    color: #6c757d
  }
  .sidebar-nav {
    position: absolute;
    top: 0;
    width: 250px;
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .sidebar-nav li {
    text-indent: 20px;
    line-height: 40px;
  }
  .sidebar-nav > .sidebar-brand {
    height: 65px;
    font-size: 18px;
    line-height: 60px;
  }
  .sidebar-nav > .sidebar-brand a {
    color: #999999;
  }
  .sidebar-nav > .sidebar-brand a:hover {
    color: #fff;
    background: none;
  }
  @media(max-width:993px) {
    .bottom {
      display: none;
    }
  }
</style>
