<nav id="sidebar">
  <a href="/">
    <div class="sidebar-header">
      <h3><span class="side-text">File sharer</span></h3>
    </div>
  </a>
  <ul class="list-unstyled components" style="align:center">
    <li <% if (active == 'files') { %> class="active" <% }%>>
      <a href="/files"><i class="fas fa-folder" data-toggle="tooltip" data-placement="right" title="All files"></i><span class="side-text"> All files</span></a>
    </li>
    <li <% if (active == 'recent') { %> class="active" <% }%>>
      <a href="/recent"><i class="fas fa-clock" data-toggle="tooltip" data-placement="right" title="Recents"></i><span class="side-text"> Recents</span></a>
    </li>
    <li <% if (active == 'favourites') { %> class="active" <% }%>>
      <span class="smallFav">
        <a type="button" href="/favourites">
          <i class="fas fa-star" data-toggle="tooltip" data-placement="right" title="Favourites"></i>
        </a>
      </span>
      <span class="side-text">
      <a type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        <i class="fas fa-star"></i><span class="side-text">Favourites <i class="fas fa-sort-up" style="align:center;float:right"></i></span>
      </a>
      <div class="collapse" id="collapseExample">
        <% for (file of user.recent.slice(0,9)) { %>
          <div style="padding-left:35px;">
            <a class="card-text text-truncate" style="color:black;font-size:15px" href="/files/<%= file.name%>" data-toggle="tooltip" data-placement="right" title="<%= file.name%>">
              <i class="far fa-file"></i>
              <b><%= file.name%></b>
            </a>
          </div>
        <% } %>
      </div>
      </span>
    </li>
  </ul>
  <div class="p-2 bottom" style="position:fixed; bottom:0; height:11%;">
    <label class="side-text"><%= formatBytes(size) %> of 5GB used</label>
    <div class="progress" style="width:140%;">
      <div class="progress-bar<%if (size  >= 4 * 1024 * 1024 * 1024) {%> bg-danger <%} else if (size  >= 2.5 * 1024 * 1024 * 1024) {%> bg-warning <%} else {%> bg-success <%}%>" role="progressbar" style="width: <%= (size / (5 * 1024 * 1024 * 1024))*100 %>%" aria-valuenow="<%= size%>" aria-valuemin="0" aria-valuemax="<%= 5 * 1024 * 1024 * 1024%>"></div>
    </div>
    <a href="/user/trash" style="position:fixed; bottom:0; height:4%;color:black;"><i class="fas fa-trash"></i> <span class="side-text">Deleted files</span></a>
  </div>
</nav>
<style>
  a:hover {
    text-decoration: none;
  }
  .card-text:hover {
    background-color: none;
  }
  .smallFav {
    display: none;
  }
  @media (max-width: 1260px) {
    .smallFav {
      display: block
    }
  }
</style>
<script type="text/javascript">
  //icon update
  $('[data-toggle="collapse"]').on('click', function(){
    console.log('boo')
    if ($(this).attr('aria-expanded') == 'true') {
      $(new Array($(this).find('i'))[0][1]).addClass('fa-sort-up').removeClass('fa-sort-down');
    } else {
      $(new Array($(this).find('i'))[0][1]).removeClass('fa-sort-up').addClass('fa-sort-down');
    }
  });

  //Only show sidebar tooltips on small screens
  $('.fas').on('show.bs.tooltip', function () {
    if ($(window).width() >= 1200) return false
  })
</script>
